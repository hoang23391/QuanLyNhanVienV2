<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chi_tiet_nhan_vien"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light"
    tools:context="com.hoangsv.quanlynhanvienv2.ChiTietNhanVienActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background_chitietnhanvien"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <ImageView
            app:srcCompat="@drawable/personal"
            android:id="@+id/imgAnhNhanVienChiTiet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:text="Tên nhân viên"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTenNhanVienChiTiet"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:text="Giới tính"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtGioiTinhChiTiet"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="Số điện thoại"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSoDienThoaiChiTiet"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_chitietnhanvien"
        android:layout_margin="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Ngày sinh:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:layout_margin="10dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:text="Hiển thị ngày sinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNgaySinhChiTiet"
                android:layout_margin="10dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:background="@android:color/background_dark"
            android:layout_height="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/textView19" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Địa chỉ:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:layout_margin="10dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:text="Hiển thị địa chỉ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDiaChiChiTiet"
                android:layout_margin="10dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:background="@android:color/background_dark"
            android:layout_height="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/textView29" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Email:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView37"
                android:layout_margin="10dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:text="Hiển thị email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtEmailChiTiet"
                android:layout_margin="10dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:background="@android:color/background_dark"
            android:layout_height="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/textView39" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Phòng ban:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView47"
                android:layout_margin="10dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:text="Hiển thị phòng ban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPhongBanChiTiet"
                android:layout_margin="10dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:background="@android:color/background_dark"
            android:layout_height="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/textView49" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Lương:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView57"
                android:layout_margin="10dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:text="Hiển thị lương"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtLuongChiTiet"
                android:layout_margin="10dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:background="@android:color/background_dark"
            android:layout_height="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/textView59" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12" />

            <Button
                android:text="@string/thoat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnThoatChiTiet" />
        </TableRow>

    </TableLayout>

</LinearLayout>
